  <main>
  <div class="modern-container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
      <div class="modern-title">
        <i class="fas fa-user-plus"></i> Enrollment List
      </div>
      <a href="/enrollments/new" class="modern-btn-primary">
        <i class="fas fa-plus"></i> Add Enrollment
      </a>
    </div>
    <div class="overflow-x-auto">
      <table class="modern-table" id="enrollmentsTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Student</th>
            <th>Class</th>
            <th>Enrollment Date</th>
            <th>Payment Status</th>
            <th>Payment Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (enrollments.length === 0) { %>
          <tr>
            <td colspan="7" style="text-align:center; color:#888; padding:2rem;">No enrollments found</td>
          </tr>
          <% } else { %>
          <% enrollments.forEach(function(enrollment) { %>
          <tr>
            <td><%= enrollment.id %></td>
            <td><%= enrollment.student_name %></td>
            <td><%= enrollment.class_name %></td>
            <td><%= enrollment.enrollment_date.toLocaleDateString() %></td>
            <td style="text-align:center;">
              <span class="payment-status <%= enrollment.payment_status ? 'status-paid' : 'status-unpaid' %>" data-id="<%= enrollment.id %>" onclick="togglePayment(this,'<%= enrollment.id %>')">
                <%= enrollment.payment_status ? 'PAID' : 'UNPAID' %>
              </span>
            </td>
            <td style="text-align:center;">
              <%= enrollment.payment_date ? new Date(enrollment.payment_date).toLocaleDateString() : '-' %>
            </td>
            <td style="text-align:center;">
              <div class="flex item-center justify-center gap-2">
                <a href="/enrollments/<%= enrollment.id %>/edit" class="modern-action-link" title="Edit">
                  <i class="fas fa-edit"></i>
                </a>
                <form action="/enrollments/<%= enrollment.id %>?_method=DELETE" method="POST" class="inline-block" onsubmit="return confirm('Are you sure you want to delete this enrollment?')">
                  <button type="submit" class="modern-action-link delete" title="Delete">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

