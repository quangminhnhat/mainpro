<% if (messages.error) { %>
<div id="loginPopup" class="fixed inset-0 flex items-center justify-center z-50">
  <div class="fixed inset-0 bg-black opacity-50"></div>
  <div class="bg-white rounded-lg p-8 relative z-10">
    <div class="flex flex-col items-center">
      <div class="text-xl font-bold text-red-600 mb-4">
        <i class="fas fa-exclamation-circle mr-2"></i>
        Authentication Required
      </div>
      <p class="text-gray-700 mb-4"><%= messages.error %></p>
      <button onclick="closePopup()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        OK
      </button>
    </div>
  </div>
</div>

<script>
  function closePopup() {
    const popup = document.getElementById('loginPopup');
    if (popup) {
      popup.classList.add('fade-out');
      setTimeout(() => {
        popup.remove();
      }, 300);
    }
  }

  // Auto close after 3 seconds
  setTimeout(closePopup, 3000);
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }

  #loginPopup {
    animation: fadeIn 0.3s ease-in;
  }

  #loginPopup.fade-out {
    animation: fadeOut 0.3s ease-out;
  }
</style>
<% } %>

    <main>
    <div class="modern-container">
        <div class="modern-header">
            <div class="modern-title">
                <i class="fas fa-user-plus"></i> New Enrollment
            </div>
            <a href="/enrollments" class="modern-btn-primary" style="background: #e5e7eb; color: #2375D8;">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
        <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger" style="margin-bottom: 1rem;">
            <% errors.forEach(error => { %>
            <p><%= error %></p>
            <% }); %>
        </div>
        <% } %>
        <form action="/enrollments" method="POST" id="enrollmentForm">
            <div class="modern-section">
                <div class="modern-section-title">Student Information</div>
                <div class="modern-form-group">
                    <label for="student_id"><i class="fas fa-user mr-2"></i>Student</label>
                    <select name="student_id" id="student_id" class="modern-form-control" required>
                        <option value="">Select Student</option>
                        <% students.forEach(student => { %>
                        <option value="<%= student.id %>" data-unpaid="<%= student.hasUnpaidFees %>"><%= student.full_name %></option>
                        <% }) %>
                    </select>
                    <div id="studentWarning" class="warning"></div>
                </div>
            </div>
            <div class="modern-section">
                <div class="modern-section-title">Class Information</div>
                <div class="modern-form-group">
                    <label for="class_id"><i class="fas fa-chalkboard mr-2"></i>Class</label>
                    <select id="class_id" name="class_id" class="modern-form-control" required>
                        <option value="">Select Class</option>
                        <% classes.forEach(cls => { %>
                        <option value="<%= cls.id %>" data-schedule="<%= cls.schedule %>" data-time="<%= cls.time %>"
                            data-fee="<%= cls.tuition_fee %>" data-teacher="<%= cls.teacher_name %>" data-enrolled="<%= cls.current_enrollments %>" data-status="<%= cls.status %>">
                            <%= cls.class_name %>
                        </option>
                        <% }) %>
                    </select>
                </div>
                <div id="classDetails" class="class-details" style="display:none;">
                    <div class="modern-info-grid">
                        <div class="modern-info-item">
                            <span class="modern-info-label">Schedule</span>
                            <span class="modern-info-value" id="scheduleInfo"></span>
                        </div>
                        <div class="modern-info-item">
                            <span class="modern-info-label">Time</span>
                            <span class="modern-info-value" id="timeInfo"></span>
                        </div>
                        <div class="modern-info-item">
                            <span class="modern-info-label">Tuition Fee</span>
                            <span class="modern-info-value" id="feeInfo"></span>
                        </div>
                        <div class="modern-info-item">
                            <span class="modern-info-label">Teacher</span>
                            <span class="modern-info-value" id="teacherInfo"></span>
                        </div>
                        <div class="modern-info-item">
                            <span class="modern-info-label">Current Enrollments</span>
                            <span class="modern-info-value" id="enrollmentInfo"></span>
                        </div>
                        <div class="modern-info-item">
                            <span class="modern-info-label">Status</span>
                            <span class="modern-info-value" id="statusBadge"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modern-section">
                <div class="modern-section-title">Enrollment Date</div>
                <div class="modern-form-group">
                    <label for="enrollment_date"><i class="fas fa-calendar-alt mr-2"></i>Enrollment Date</label>
                    <input type="date" id="enrollment_date" name="enrollment_date" required class="modern-form-control" />
                </div>
            </div>
            <button type="submit" class="modern-btn-primary" style="width:100%;">
                <i class="fas fa-check-circle mr-2"></i>
                Complete Enrollment
            </button>
        </form>
    </div>
</main>
<script src="/js/script.js"></script>
<script src="/js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const studentSelect = document.getElementById('student_id');
            const classSelect = document.getElementById('class_id');
            const studentWarning = document.getElementById('studentWarning');
            const classDetails = document.getElementById('classDetails');
            const scheduleInfo = document.getElementById('scheduleInfo');
            const timeInfo = document.getElementById('timeInfo');
            const feeInfo = document.getElementById('feeInfo');
            const teacherInfo = document.getElementById('teacherInfo');
            const enrollmentInfo = document.getElementById('enrollmentInfo');
            const statusBadge = document.getElementById('statusBadge');
            
            studentSelect.addEventListener('change', function () {
                const selected = studentSelect.options[studentSelect.selectedIndex];
                if (selected && selected.dataset.unpaid === 'true') {
                    studentWarning.textContent = 'Warning: Student has unpaid fees';
                } else {
                    studentWarning.textContent = '';
                }
            });
            classSelect.addEventListener('change', function () {
                const selected = classSelect.options[classSelect.selectedIndex];
                if (selected && selected.value) {
                    classDetails.style.display = '';
                    scheduleInfo.textContent = selected.dataset.schedule || '';
                    timeInfo.textContent = selected.dataset.time || '';
                    feeInfo.textContent = selected.dataset.fee ? `$${selected.dataset.fee}` : '';
                    teacherInfo.textContent = selected.dataset.teacher || '';
                    enrollmentInfo.textContent = selected.dataset.enrolled || '';
                    const status = selected.dataset.status || '';
                    let badge = '';
                    if (status === 'Active') badge = '<span class="status-badge status-active">Active</span>';
                    else if (status === 'Upcoming') badge = '<span class="status-badge status-upcoming">Upcoming</span>';
                    else if (status === 'Ended') badge = '<span class="status-badge status-ended">Ended</span>';
                    else badge = `<span class="status-badge">${status}</span>`;
                    statusBadge.innerHTML = badge;
                } else {
                    classDetails.style.display = 'none';
                }
            });
            document.querySelector('form').addEventListener('submit', function (e) {
                const studentSelected = studentSelect.options[studentSelect.selectedIndex];
                const classSelected = classSelect.options[classSelect.selectedIndex];
                if (studentSelected && studentSelected.dataset.unpaid === 'true') {
                    e.preventDefault();
                    alert('Cannot enroll: Student has unpaid fees.');
                    return;
                }
                if (classSelected && classSelected.dataset.status === 'Ended') {
                    e.preventDefault();
                    alert('Cannot enroll: Class has ended.');
                    return;
                }
            });
        });
    </script>

