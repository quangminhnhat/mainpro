            font-size: 1.1rem;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(36,117,216,0.10);
            transition: background 0.2s, transform 0.15s;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
        }
        .modern-btn-primary:hover {
            background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(36,117,216,0.18);
        }
        .modern-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f7fafc;
            border-radius: 10px;
        }
        .modern-section-title {
            font-size: 1.25rem;
            color: #4a5568;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        .modern-form-group {
            margin-bottom: 1.5rem;
        }
        .modern-form-group label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            letter-spacing: 0.5px;
        }
        .modern-form-control,
        .modern-form-control:focus {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1.5px solid #e5e7eb;
            border-radius: 8px;
            font-size: 1rem;
            background: #f9fafb;
            transition: border-color 0.2s, box-shadow 0.2s;
            outline: none;
            color: #22223b;
        }
        .modern-form-control:focus {
            border-color: #2375D8;
            box-shadow: 0 0 0 2px #2375d830;
            background: #fff;
        }
        .warning {
            color: #dc3545;
            font-size: 12px;
            margin-top: 5px;
        }
        .class-details {
            margin-top: 10px;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 4px;
            display: none;
        }
        .modern-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
        }
        .modern-info-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }
        .modern-info-label {
            font-size: 0.875rem;
            color: #718096;
            font-weight: 500;
        }
        .modern-info-value {
            font-size: 1rem;
            color: #2d3748;
            font-weight: 600;
        }
        .status-badge {
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }
        .status-active {
            background: #28a745;
            color: white;
        }
        .status-upcoming {
            background: #17a2b8;
            color: white;
        }
        .status-ended {
            background: #dc3545;
            color: white;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(18px);}
            to { opacity: 1; transform: translateY(0);}
        }
