      <!-- The slider now has horizontal margins to create space for the arrows -->
      <div class="news-section swiper news-swiper" style="margin: 0 60px;">
        <div class="swiper-wrapper">
          <% if (courses && courses.length) { %>
          <% /* normalize various stored image paths and provide a fallback */ %>
          <% function imageSrc(img) {
               if (!img) return '/images/placeholder.svg';
               if (typeof img !== 'string') return '/images/placeholder.svg';
               img = String(img).replace(/\\\\/g, '/'); // backslashes -> slashes
               if (/^https?:\/\//i.test(img)) return img; // full url
               if (img.startsWith('/')) return img; // already absolute
               if (img.startsWith('uploads/')) return '/' + img; // uploaded files served at /uploads
               if (img.startsWith('images/')) return '/' + img; // existing public images
               // bare filename — assume it's in public/images
               return '/images/' + img;
             } %>
          <% courses.slice(0, 6).forEach(function(course) { %>
          <div class="news-item2 swiper-slide">
            <img src="<%= imageSrc(course.img) %>" alt="Course Image"
              onerror="this.onerror=null;this.src='/images/placeholder.svg'">
            <div class="news-content">
              <div class="news-title">
                <a href="/course-detail/<%= course.id %>"><%= course.title %></a>
              </div>
              <div class="news-description">
                <%= course.course_desc %>
              </div>
            </div>
          </div>
          <% }); %>
          <% } else { %>
          <div class="news-item2 swiper-slide">
            <div class="news-content">
              <div class="news-title">No courses available</div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    
     
