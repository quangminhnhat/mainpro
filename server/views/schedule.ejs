    font-weight: 700;
    font-size: 1.1rem;
    padding: 0.7rem 1.5rem;
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 16px rgba(36, 117, 216, 0.10);
    transition: background 0.2s, transform 0.15s;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    text-decoration: none;
  }
  .modern-btn-primary:hover {
    background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 8px 24px rgba(36, 117, 216, 0.18);
  }
  .modern-btn-secondary {
    background: #e5e7eb;
    color: #2375D8;
    font-weight: 700;
    font-size: 1.1rem;
    padding: 0.7rem 1.5rem;
    border: none;
    border-radius: 10px;
    margin-left: 10px;
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    transition: background 0.2s, color 0.2s;
    text-decoration: none;
  }
  .modern-btn-secondary:hover {
    background: #d1d5db;
    color: #0c9083;
  }
  .modern-week-range {
    font-size: 1rem;
    color: #374151;
    background: #f7fafc;
    border-radius: 8px;
    padding: 0.4rem 1.2rem;
    margin: 0 0.2rem;
    font-weight: 500;
  }
  .modern-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1.5rem;
    background: #f9fafb;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(44, 62, 80, 0.06);
  }
  .modern-table th {
    background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
    color: #fff;
    font-weight: 700;
    border: none;
    padding: 12px 8px;
    text-align: center;
    font-size: 1rem;
  }
  .modern-table td {
    background: #f9fafb;
    border: none;
    padding: 10px 8px;
    color: #22223b;
    text-align: left;
    vertical-align: top;
  }
  .modern-schedule-period {
    background: #0c9083;
    color: #fff;
    font-weight: 600;
    text-align: center;
    border-radius: 8px;
    font-size: 1rem;
    min-width: 70px;
  }
  .modern-class-card {
    border-left: 4px solid #2375D8;
    background: #e6f0fa;
    border-radius: 8px;
    padding: 0.5rem 0.7rem;
    margin-bottom: 0.2rem;
    box-shadow: 0 2px 8px rgba(44,62,80,0.06);
    width: 100%;
  }
  .modern-class-card.special {
    border-left: 4px solid #fbbf24;
    background: #fffbe6;
  }
  .modern-class-title {
    font-weight: 700;
    color: #2375D8;
    font-size: 1.05rem;
    margin-bottom: 0.1rem;
  }
  .modern-class-sub {
    color: #374151;
    font-size: 0.98rem;
    margin-bottom: 0.1rem;
  }
  .modern-class-teacher {
    color: #6b7280;
    font-size: 0.92rem;
  }
  .modern-schedule-empty {
    color: #cbd5e1;
    text-align: center;
    width: 100%;
    height: 100%;
    font-size: 0.95rem;
    padding-top: 0.7rem;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(18px);}
    to { opacity: 1; transform: translateY(0);}
  }
</style>
