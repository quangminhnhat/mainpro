<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Exam</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/mobile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

    <style>
        /* Modern container + button styles (matching classes.ejs) */
        .modern-container {
            max-width: 1200px;
            margin: 48px auto;
            padding: 2rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44,62,80,0.10);
            border: 1px solid #e3e6ed;
            animation: fadeIn 0.45s;
        }
        .modern-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2375D8;
            letter-spacing: 0.5px;
        }
        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            padding: 0.6rem 1rem;
            border: none;
            border-radius: 10px;
            text-decoration: none;
            display: inline-flex;
            gap: .6rem;
            align-items: center;
        }
        /* Forms & secondary button */
        .modern-form-group { margin-bottom: 0.9rem; }
        .modern-form-group label { display:block; margin-bottom:0.35rem; font-weight:600; color:#374151; }
        .modern-form-control {
            width:100%;
            padding:0.6rem;
            border:1px solid #e6eef8;
            border-radius:8px;
            font-size:0.98rem;
            background:#fff;
            box-sizing:border-box;
        }
        .modern-form-control:focus { outline: none; box-shadow: 0 4px 18px rgba(35,117,216,0.08); border-color:#2375D8; }
        .modern-form-row { display:flex; gap:1rem; flex-wrap:wrap; }
        .modern-form-row > div { flex:1 1 48%; min-width:160px; }
        .modern-btn-secondary {
            background:#f3f6fb;
            color:#2375D8;
            padding:0.55rem 0.9rem;
            border-radius:10px;
            text-decoration:none;
            display:inline-flex;
            align-items:center;
            gap:0.5rem;
            border:1px solid #e6eef8;
        }
        .modern-btn-secondary:hover { transform: translateY(-1px); }
        /* action small buttons in question cards / tables */
        .action-btn {
            background: transparent;
            border: 1px solid rgba(35,117,216,0.12);
            color: #2375D8;
            padding: 0.35rem 0.5rem;
            border-radius:8px;
            cursor:pointer;
            display:inline-flex;
            align-items:center;
            gap:0.4rem;
        }
        .action-btn:hover { background: rgba(35,117,216,0.05); }
        .action-btn-danger { color:#ef4444; border-color: rgba(239,68,68,0.12); }
        .action-btn-warning { color:#b45309; border-color: rgba(180,83,9,0.12); }
        .panel {
            border-radius: 12px;
            padding: 1rem;
            background: #f9fafb;
            border: 1px solid #eaeef5;
        }
        .question-card {
            border-radius: 10px;
            padding: .85rem;
            background: #fff;
            border: 1px solid #e6eef8;
            box-shadow: 0 1px 6px rgba(44,62,80,0.04);
        }
        .muted { color: #6b7280; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(12px);} to { opacity: 1; transform: translateY(0);} }
    </style>
</head>

<body>
<%- include('../shared/header') %>

<main>
    <div class="modern-container">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1rem;">
            <div class="modern-title"><i class="fas fa-edit"></i> Edit Exam</div>
            <div style="display:flex; gap:.5rem;">
                <a href="/exams" class="modern-btn-primary" title="Back to Exams">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a href="/exams/<%= exam.exam_id %>/questions/new" class="modern-btn-primary" style="background: linear-gradient(90deg,#10b981,#06b6d4);">
                    <i class="fas fa-plus"></i> Add Question
                </a>
            </div>
        </div>

        <div class="panel" style="margin-bottom:1.25rem;">
            <div style="display:flex; gap:1.25rem; flex-wrap:wrap;">
                <!-- exam form (div) -->
                <div style="flex:1 1 520px; min-width:320px;">
                    <div id="examForm" class="exam-form" data-action="/exams/<%= exam.exam_id %>">
                        <input type="hidden" name="_method" value="PUT">

                        <div class="modern-form-group">
                            <label for="exam_title">Exam Title*</label>
                            <input type="text" class="modern-form-control" id="exam_title" name="exam_title"
                                   value="<%= exam.exam_title %>" required>
                        </div>

                        <div class="modern-form-group">
                            <label for="description">Description</label>
                            <textarea class="modern-form-control" id="description" name="description"
                                      rows="3"><%= exam.description %></textarea>
                        </div>

                        <div class="modern-form-row" style="margin-top:0.25rem;">
                            <div>
                                <div class="modern-form-group">
                                    <label for="duration_minutes">Duration (minutes)*</label>
                                    <input type="number" class="modern-form-control" id="duration_minutes"
                                           name="duration_minutes" min="1" value="<%= exam.duration_min %>" required>
                                </div>
                            </div>
                            <div>
                                <div class="modern-form-group">
                                    <label for="total_marks">Total Marks*</label>
                                    <input type="number" class="modern-form-control" id="total_marks"
                                           name="total_marks" min="1" value="<%= exam.total_points %>" required>
                                </div>
                            </div>
                        </div>

                        <div class="modern-form-group">
                            <label for="passing_marks">Passing Marks</label>
                            <input type="number" class="modern-form-control" id="passing_marks"
                                   name="passing_marks" min="0" value="<%= exam.passing_points || 0 %>">
                        </div>

                        <div style="display:flex; gap:.5rem; margin-top:.5rem;">
                            <button type="button" id="saveExamBtn" class="modern-btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a href="/exams" class="modern-btn-secondary" style="align-self:center;"><i class="fas fa-times"></i> Cancel</a>
                        </div>
                    </div>
                </div>

                <!-- exam summary / stats -->
                <div style="width:320px;">
                    <div class="question-card">
                        <h5 style="margin:0 0 .5rem 0;">Exam Summary</h5>
                        <p class="muted" style="margin:.25rem 0;">ID: <strong><%= exam.exam_id %></strong></p>
                        <p class="muted" style="margin:.25rem 0;">Created: <%= exam.created_at ? exam.created_at : '—' %></p>
                        <p class="muted" style="margin:.25rem 0;">Questions: <strong><%= questions ? questions.length : 0 %></strong></p>
                        <p class="muted" style="margin:.25rem 0;">Duration: <strong><%= exam.duration_min %> min</strong></p>
                        <p style="margin-top:.75rem;"><a href="/exams/<%= exam.exam_id %>" class="modern-btn-primary" style="font-size:.9rem;"><i class="fas fa-eye"></i> View Exam</a></p>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <h4 style="margin-bottom:.75rem;">Questions</h4>

            <div style="display:grid; grid-template-columns:repeat(auto-fit,minmax(260px,1fr)); gap:1rem;">
                <% if (questions && questions.length > 0) { %>
                    <% questions.forEach(question => { %>
                        <div class="question-card">
                            <div style="display:flex; justify-content:space-between; align-items:flex-start;">
                                <div style="max-width:70%;">
                                    <h5 style="margin:0 0 .4rem 0; font-size:1rem;"><%= question.body_text %></h5>
                                    <p class="muted" style="margin:0;">Points: <strong><%= question.points %></strong></p>
                                </div>
                                <div style="text-align:right;">
                                    <div style="margin-bottom:.5rem;"><span class="badge bg-primary"><%= question.type_name %></span></div>
                                    <div style="display:flex; gap:.4rem; justify-content:flex-end;">
                                        <a href="/questions/<%= question.question_id %>/edit" class="action-btn action-btn-warning" title="Edit"><i class="fas fa-edit"></i></a>
                                        <button onclick="deleteQuestion('<%= question.question_id %>')" class="action-btn action-btn-danger" title="Delete"><i class="fas fa-trash"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="panel muted">No questions added yet.</div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<script>
// Khi form dùng div, bắt click nút lưu và thu thập input bên trong div#examForm
document.getElementById('saveExamBtn').addEventListener('click', function(e) {
    e.preventDefault();
    const container = document.getElementById('examForm');
    const action = container.dataset.action || `/exams/<%= exam.exam_id %>`;
    const elements = container.querySelectorAll('input[name], textarea[name], select[name]');
    const data = {};
    elements.forEach(el => {
        const name = el.name;
        if (!name || name === '_method') return;
        if (el.type === 'checkbox') {
            data[name] = el.checked;
        } else {
            data[name] = el.value;
        }
    });

    fetch(action, {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(resp => {
        if (resp.success) {
            window.location.href = '/exams';
        } else {
            alert(resp.message || 'Error updating exam');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error updating exam');
    });
});

 function deleteQuestion(questionId) {
     if (confirm('Are you sure you want to delete this question? This action cannot be undone.')) {
         fetch(`/questions/${questionId}`, {
             method: 'DELETE',
             headers: {
                 'Content-Type': 'application/json'
             },
         })
         .then(response => response.json())
         .then(data => {
             if (data.success) {
                 window.location.reload();
             } else {
                 alert(data.message || 'Error deleting question');
             }
         })
         .catch(error => {
             console.error('Error:', error);
             alert('Error deleting question');
         });
     }
 }
</script>

<%- include('../shared/footer') %>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>

</html>