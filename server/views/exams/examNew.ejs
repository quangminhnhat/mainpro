<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Exam</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/mobile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
    <!-- link swiper-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet"
        href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

    <style>
        /* Modern card styles borrowed from addClass layout */
        .modern-container {
            max-width: 1200px;
            margin: 48px auto;
            padding: 2.25rem 2rem;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 6px 30px rgba(44,62,80,0.08);
            border: 1px solid #e6e9ef;
            animation: fadeIn 0.4s ease;
        }
        .modern-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: #2375D8;
            margin-bottom: 1.25rem;
            display:flex;
            align-items:center;
            gap:0.6rem;
        }
        .modern-form-group { margin-bottom: 1.1rem; }
        .modern-form-group label { display:block; margin-bottom:0.45rem; font-weight:600; color:#374151; }
        .modern-form-control {
            width:100%;
            padding:0.7rem;
            border:1px solid #e2e8f0;
            border-radius:8px;
            font-size:1rem;
        }
        .modern-form-row { display:grid; grid-template-columns:1fr 1fr; gap:1rem; }
        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight:700;
            padding:0.85rem 1rem;
            border:none;
            border-radius:10px;
            cursor:pointer;
            display:inline-flex;
            gap:0.6rem;
            align-items:center;
            justify-content:center;
        }
        .modern-btn-secondary {
            background:#e6eef8;
            color:#2b6cb0;
            padding:0.7rem 1rem;
            border-radius:10px;
            text-decoration:none;
            display:inline-flex;
            gap:0.6rem;
            align-items:center;
            border:none;
            cursor:pointer;
        }
        @keyframes fadeIn { from { opacity:0; transform:translateY(10px);} to { opacity:1; transform:translateY(0);} }
    </style>
</head>

<body>
<%- include('../shared/header') %>

<div class="modern-container">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:1rem;">
        <div class="modern-title">
            <i class="fas fa-file-alt"></i>
            Create New Exam
        </div>
        <div>
            <a href="/exams" class="modern-btn-secondary"><i class="fas fa-arrow-left"></i> Back to Exams</a>
        </div>
    </div>

    <!-- Keep the form element and id to preserve JS and server behavior -->
    <form action="/exams/new" method="POST" id="examForm">
        <div class="modern-form-group">
            <label for="exam_title">Exam Title*</label>
            <input type="text" class="modern-form-control" id="exam_title" name="exam_title" required>
        </div>

        <div class="modern-form-group">
            <label for="description">Description</label>
            <textarea class="modern-form-control" id="description" name="description" rows="3"></textarea>
        </div>

        <div class="modern-form-row">
            <div>
                <div class="modern-form-group">
                    <label for="duration_minutes">Duration (minutes)*</label>
                    <input type="number" class="modern-form-control" id="duration_minutes" name="duration_minutes" min="1" required>
                </div>
            </div>
            <div>
                <div class="modern-form-group">
                    <label for="total_marks">Total Marks*</label>
                    <input type="number" class="modern-form-control" id="total_marks" name="total_marks" min="1" required>
                </div>
            </div>
        </div>

        <div class="modern-form-group">
            <label for="passing_marks">Passing Marks</label>
            <input type="number" class="modern-form-control" id="passing_marks" name="passing_marks" min="0">
        </div>

        <div style="display:flex; gap:1rem; margin-top:1.25rem; justify-content:flex-end;">
            <a href="/exams" class="modern-btn-secondary"><i class="fas fa-times"></i> Cancel</a>
            <button type="submit" class="modern-btn-primary"><i class="fas fa-save"></i> Create Exam</button>
        </div>
    </form>
</div>

<script>
document.getElementById('examForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = {};
    formData.forEach((value, key) => {
        data[key] = value;
    });

    fetch('/exam/new', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
        if (data.message === "Exam created successfully") {
            window.location.href = '/exams';
        } else {
            alert(data.message || 'Error creating exam');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error creating exam');
    });
});
</script>

<%- include('../shared/footer') %>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="/js/script.js"></script>
</body>

</html>